<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="USJRLedger.Views.Adviser.IncomeRequestsPage"
             Title="Income Requests">
    <VerticalStackLayout Padding="20" Spacing="20">
        <Label Text="Pending Income Requests" FontSize="20" FontAttributes="Bold" />

        <Label x:Name="NoIncome" 
               Text="No pending income requests"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               FontSize="16"
               TextColor="Gray"
               IsVisible="False" />

        <ListView x:Name="IncomeList" HasUnevenRows="True">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ViewCell>
                        <Frame Margin="5" Padding="10" BorderColor="Gray">
                            <Grid RowDefinitions="Auto,Auto,Auto,Auto" ColumnDefinitions="*,Auto">
                                <Label Grid.Row="0" Grid.Column="0" 
                                       Text="{Binding Detail}" 
                                       FontAttributes="Bold" 
                                       FontSize="16" />

                                <StackLayout Grid.Row="1" Grid.Column="0" Orientation="Horizontal" Spacing="5">
                                    <Label Text="Amount:" FontAttributes="Bold" />
                                    <Label Text="{Binding AmountString}" TextColor="Green" />
                                </StackLayout>

                                <StackLayout Grid.Row="2" Grid.Column="0" Orientation="Horizontal" Spacing="5">
                                    <Label Text="Requested By:" FontAttributes="Bold" />
                                    <Label Text="{Binding RequestedBy}" />
                                </StackLayout>

                                <StackLayout Grid.Row="3" Grid.Column="0" Orientation="Horizontal" Spacing="5">
                                    <Label Text="Date:" FontAttributes="Bold" />
                                    <Label Text="{Binding DateRequested}" />
                                    <Label Text="Category:" FontAttributes="Bold" />
                                    <Label Text="{Binding Category}" />
                                    <Label Text="Event:" FontAttributes="Bold" />
                                    <Label Text="{Binding Event}" />
                                </StackLayout>

                                <StackLayout Grid.Row="0" Grid.Column="1" 
                                             Grid.RowSpan="4" 
                                             VerticalOptions="Center" 
                                             Spacing="10">
                                    <Button Text="View Receipt" 
                                            IsVisible="{Binding HasReceipt}"
                                            BindingContext="{Binding .}"
                                            Clicked="OnViewReceiptClicked" />

                                    <Button Text="Approve" 
                                            BackgroundColor="Green"
                                            BindingContext="{Binding .}"
                                            Clicked="OnApproveClicked" />

                                    <Button Text="Reject" 
                                            BackgroundColor="Red"
                                            BindingContext="{Binding .}"
                                            Clicked="OnRejectClicked" />
                                </StackLayout>
                            </Grid>
                        </Frame>
                    </ViewCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </VerticalStackLayout>
</ContentPage>