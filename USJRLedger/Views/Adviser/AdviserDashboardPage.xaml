<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:converters="clr-namespace:USJRLedger.Converters"
    x:Class="USJRLedger.Views.Adviser.AdviserDashboardPage"
    Title="Adviser Dashboard">

    <!--  Resource dictionary: register the color converter -->
    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:BalanceColorConverter x:Key="BalanceColorConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Welcome message -->
            <Label x:Name="WelcomeLabel"
                   FontSize="22"
                   FontAttributes="Bold"
                   TextColor="Black"
                   HorizontalOptions="Center" />

            <!-- Organization and school year info -->
            <Label x:Name="OrganizationLabel"
                   FontSize="16"
                   TextColor="Gray"
                   HorizontalOptions="Center" />

            <Label x:Name="SchoolYearStatusLabel"
                   FontSize="16"
                   FontAttributes="Italic"
                   HorizontalOptions="Center" />

            <!-- Summary Grid (Balances, Pending, etc.) -->
            <Grid x:Name="SummaryGrid"
                  ColumnSpacing="10"
                  RowSpacing="10"
                  HorizontalOptions="Center"
                  VerticalOptions="Center">

                <!-- CARD 1: Current Balance -->
                <Border Stroke="Gray"
                        StrokeThickness="1"
                        Padding="10"
                        Margin="5"
                        BackgroundColor="#fafafa">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10" />
                    </Border.StrokeShape>

                    <VerticalStackLayout
                        HorizontalOptions="Center"
                        VerticalOptions="Center">
                        <Label Text="Current Balance"
                               FontSize="16"
                               FontAttributes="Bold" />
                        <Label x:Name="BalanceLabel"
                               FontSize="20"
                               FontAttributes="Bold"
                               Text="{Binding CurrentBalance, StringFormat='â‚±{0:N2}'}"
                               TextColor="{Binding CurrentBalance, Converter={StaticResource BalanceColorConverter}}" />
                    </VerticalStackLayout>
                </Border>

                <!-- CARD 2: Pending Expenses -->
                <Border Stroke="Gray"
                        StrokeThickness="1"
                        Padding="10"
                        Margin="5"
                        BackgroundColor="#fff3cd">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10" />
                    </Border.StrokeShape>

                    <VerticalStackLayout
                        HorizontalOptions="Center"
                        VerticalOptions="Center">
                        <Label Text="Pending Expenses"
                               FontSize="16"
                               FontAttributes="Bold" />
                        <Label x:Name="PendingExpensesLabel"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="#d9534f" />
                        <!-- Red-Orange -->
                    </VerticalStackLayout>
                </Border>

                <!-- CARD 3: Pending Income -->
                <Border Stroke="Gray"
                        StrokeThickness="1"
                        Padding="10"
                        Margin="5"
                        BackgroundColor="#d1ecf1">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10" />
                    </Border.StrokeShape>

                    <VerticalStackLayout
                        HorizontalOptions="Center"
                        VerticalOptions="Center">
                        <Label Text="Pending Income"
                               FontSize="16"
                               FontAttributes="Bold" />
                        <Label x:Name="PendingIncomeLabel"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="#0c5460" />
                        <!-- Blue-Green -->
                    </VerticalStackLayout>
                </Border>

                <!-- CARD 4: Notifications -->
                <Border Stroke="Gray"
                        StrokeThickness="1"
                        Padding="10"
                        Margin="5"
                        BackgroundColor="#fafafa">
                    <Border.StrokeShape>
                        <RoundRectangle CornerRadius="10" />
                    </Border.StrokeShape>

                    <VerticalStackLayout>
                        <Label Text="Recent Pending Requests"
                               FontSize="16"
                               FontAttributes="Bold"
                               Margin="0,0,0,5" />
                        <CollectionView x:Name="NotificationListView"
                                        ItemsSource="{Binding Notifications}"
                                        HeightRequest="150">
                            <CollectionView.ItemTemplate>
                                <DataTemplate>
                                    <VerticalStackLayout Padding="5">
                                        <Label Text="{Binding Detail}" FontSize="14" />
                                        <Label Text="{Binding DateString}" FontSize="12" TextColor="Gray" />
                                        <BoxView HeightRequest="1" Color="#ddd" Margin="0,5"/>
                                    </VerticalStackLayout>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Border>
            </Grid>

            <!--  Buttons Section -->
            <VerticalStackLayout Spacing="10">
                <Button Text="View Organization Profile"
                        Clicked="OnViewOrgProfileClicked"
                        BackgroundColor="#28a745"
                        TextColor="White" />

                <Button Text="Manage Officers"
                        Clicked="OnManageOfficersClicked"
                        BackgroundColor="#28a745"
                        TextColor="White" />

                <Button Text="School Year Management"
                        Clicked="OnSchoolYearClicked"
                        BackgroundColor="#28a745"
                        TextColor="White" />

                <Button Text="Expense Requests"
                        Clicked="OnExpenseRequestsClicked"
                        BackgroundColor="#28a745"
                        TextColor="White" />

                <Button Text="Income Requests"
                        Clicked="OnIncomeRequestsClicked"
                        BackgroundColor="#28a745"
                        TextColor="White" />

                <Button Text="Events"
                        Clicked="OnEventsClicked"
                        BackgroundColor="#28a745"
                        TextColor="white" />

                <Button Text="Logout"
                        Clicked="OnLogoutClicked"
                        BackgroundColor="#8B0000"
                        TextColor="White" />
            </VerticalStackLayout>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
