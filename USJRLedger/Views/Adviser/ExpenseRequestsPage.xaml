<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="USJRLedger.Views.Adviser.ExpenseRequestsPage"
             Title="Expense Requests">

    <VerticalStackLayout Padding="20" Spacing="20">
        <Label Text="Pending Expense Requests"
               FontSize="20"
               FontAttributes="Bold" />

        <Label x:Name="NoExpensesLabel" 
               Text="No pending expense requests"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               FontSize="16"
               TextColor="Gray"
               IsVisible="False" />

        <CollectionView x:Name="ExpensesCollectionView"
                        SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Stroke="Gray"
                            StrokeShape="RoundRectangle 10"
                            Padding="12"
                            Margin="5"
                            BackgroundColor="White">
                        <Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,Auto"
                              ColumnDefinitions="*,Auto"
                              RowSpacing="5">

                            <!-- Expense Detail -->
                            <Label Grid.Row="0" 
                                   Grid.Column="0"
                                   Text="{Binding Detail}"
                                   FontAttributes="Bold"
                                   FontSize="16" />

                            <!-- Amount -->
                            <HorizontalStackLayout Grid.Row="1"
                                                   Grid.Column="0" 
                                                   Spacing="5">
                                <Label Text="Amount:" 
                                       FontAttributes="Bold" />
                                <Label Text="{Binding AmountString}" 
                                       TextColor="Red" />
                            </HorizontalStackLayout>

                            <!-- Requested By -->
                            <HorizontalStackLayout Grid.Row="2"
                                                   Grid.Column="0" 
                                                   Spacing="5">
                                <Label Text="Requested By:" 
                                       FontAttributes="Bold" />
                                <Label Text="{Binding RequestedBy}" />
                            </HorizontalStackLayout>

                            <!-- Date -->
                            <HorizontalStackLayout Grid.Row="3"
                                                   Grid.Column="0"
                                                   Spacing="5">
                                <Label Text="Date:"
                                       FontAttributes="Bold" />
                                <Label Text="{Binding DateRequested}" />
                            </HorizontalStackLayout>

                            <!-- Category -->
                            <HorizontalStackLayout Grid.Row="4" 
                                                   Grid.Column="0"
                                                   Spacing="5">
                                <Label Text="Category:"
                                       FontAttributes="Bold" />
                                <Label Text="{Binding Category}" />
                            </HorizontalStackLayout>

                            <!-- Event (now on its own line) -->
                            <HorizontalStackLayout Grid.Row="5"
                                                   Grid.Column="0" 
                                                   Spacing="5">
                                <Label Text="Event:"
                                       FontAttributes="Bold" />
                                <Label Text="{Binding Event}" />
                            </HorizontalStackLayout>

                            <!-- Action Buttons -->
                            <VerticalStackLayout Grid.Row="0" 
                                                 Grid.Column="1"
                                                 Grid.RowSpan="6"
                                                 VerticalOptions="Center"
                                                 Spacing="10">
                                <Button Text="View Receipt"
                                        IsVisible="{Binding HasReceipt}"
                                        BindingContext="{Binding .}"
                                        Clicked="OnViewReceiptClicked" />

                                <Button Text="Approve"
                                        BackgroundColor="#28a745"
                                        TextColor="White"
                                        CornerRadius="6"
                                        BindingContext="{Binding .}"
                                        Clicked="OnApproveClicked" />

                                <Button Text="Reject"
                                        BackgroundColor="#D32F2F"
                                        TextColor="White"
                                        CornerRadius="6"
                                        BindingContext="{Binding .}"
                                        Clicked="OnRejectClicked" />
                            </VerticalStackLayout>
                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
