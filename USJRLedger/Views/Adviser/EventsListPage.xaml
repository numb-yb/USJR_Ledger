<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="USJRLedger.Views.Adviser.EventsListPage"
             Title="Events">

    <VerticalStackLayout Padding="20" Spacing="20">
        <!-- School Year Label -->
        <Label x:Name="SchoolYearLabel"
               FontSize="18"
               FontAttributes="Bold" />

        <Label Text="All Events"
               FontSize="20"
               FontAttributes="Bold" />

        <!-- Message when no events -->
        <Label x:Name="NoEventsLabel"
               Text="No events found for the current school year"
               HorizontalOptions="Center"
               VerticalOptions="Center"
               FontSize="16"
               TextColor="Gray"
               IsVisible="False" />

        <!-- replacement for ListView -->
        <CollectionView x:Name="EventsCollectionView"
                        SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Border Stroke="Gray"
                            StrokeShape="RoundRectangle 10"
                            Padding="12"
                            Margin="5">

                        <Grid RowDefinitions="Auto,Auto,Auto"
                              ColumnDefinitions="*,Auto">

                            <!-- Event Name -->
                            <Label Grid.Row="0"
                                   Grid.Column="0"
                                   Text="{Binding Name}"
                                   FontAttributes="Bold"
                                   FontSize="16" />

                            <!-- Event Date -->
                            <HorizontalStackLayout Grid.Row="1"
                                                   Grid.Column="0"
                                                   Spacing="5">
                                <Label Text="Event Date:"
                                       FontAttributes="Bold" />
                                <Label Text="{Binding EventDate}" />
                            </HorizontalStackLayout>

                            <!-- Balance -->
                            <HorizontalStackLayout Grid.Row="2"
                                                   Grid.Column="0"
                                                   Spacing="5">
                                <Label Text="Balance:"
                                       FontAttributes="Bold" />
                                <Label Text="{Binding Balance}"
                                       TextColor="{Binding BalanceAmount, Converter={StaticResource AmountColorConverter}}" />
                            </HorizontalStackLayout>

                            <!-- Action Button -->
                            <VerticalStackLayout Grid.Row="0"
                                                 Grid.Column="1"
                                                 Grid.RowSpan="3"
                                                 VerticalOptions="Center"
                                                 Spacing="10">
                                <Button Text="View Details"
                                        BackgroundColor="#28a745"
                                        TextColor="White"
                                        CornerRadius="6"
                                        BindingContext="{Binding .}"
                                        Clicked="OnViewEventDetailsClicked" />
                            </VerticalStackLayout>

                        </Grid>
                    </Border>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>
    </VerticalStackLayout>
</ContentPage>
