<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="USJRLedger.Views.Common.ChangePasswordPage"
             Title="Change Password">
    <VerticalStackLayout Padding="20" VerticalOptions="Center" Spacing="20">
        <Label Text="You need to change your temporary password before continuing"
               HorizontalOptions="Center"
               FontSize="18"
               Margin="0,0,0,20"/>

        <Entry x:Name="NewPasswordEntry" 
               Placeholder="New Password" 
               IsPassword="True"/>

        <Entry x:Name="ConfirmPasswordEntry" 
               Placeholder="Confirm Password" 
               IsPassword="True"/>

        <Button x:Name="ChangePasswordButton"
                Text="Change Password"
                Clicked="OnChangePasswordClicked"
                HorizontalOptions="Fill"/>

        <Label x:Name="StatusLabel"
               HorizontalOptions="Center"/>
    </VerticalStackLayout>
</ContentPage>