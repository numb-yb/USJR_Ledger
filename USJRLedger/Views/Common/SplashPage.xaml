<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="USJRLedger.Views.Common.SplashPage"
             BackgroundColor="#1a237e">

    <Grid>
        <StackLayout VerticalOptions="Center" HorizontalOptions="Center">
            <!-- Use a different image name to avoid the duplicate resource error -->
            <Image Source="splash_logo1.png"
                   HeightRequest="150" 
                   WidthRequest="150"
                   HorizontalOptions="Center" />

            <Label Text="USJR LEDGER"
                   FontSize="32"
                   FontAttributes="Bold"
                   TextColor="White"
                   HorizontalOptions="Center"
                   Margin="0,20,0,10" />

            <Label Text="Organization Management System"
                   FontSize="18"
                   TextColor="White"
                   HorizontalOptions="Center"
                   Margin="0,0,0,30" />

            <ActivityIndicator IsRunning="True"
                              Color="White"
                              HorizontalOptions="Center" />
        </StackLayout>
    </Grid>
</ContentPage>