<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="USJRLedger.Views.Officer.AddExpensePage"
             Title="Add Expense">
    <ScrollView>
        <VerticalStackLayout Padding="20"
                             Spacing="20">
            <Label x:Name="SchoolYearLabel" 
                   FontSize="18"
                   FontAttributes="Bold" />

            <Frame BorderColor="Gray"
                   Padding="15">
                <VerticalStackLayout 
                    Spacing="15">
                    <Label Text="Expense Details" 
                           FontSize="20"
                           FontAttributes="Bold" />

                    <VerticalStackLayout 
                        Spacing="5">
                        <Label 
                            Text="Expense Description" />
                        <Entry
                            x:Name="DetailEntry"
                            Placeholder="Enter expense description" />
                    </VerticalStackLayout>

                    <VerticalStackLayout 
                        Spacing="5">
                        <Label 
                            Text="Amount" />
                        <Entry
                            x:Name="AmountEntry"
                            Placeholder="Enter amount"
                            Keyboard="Numeric" />
                    </VerticalStackLayout>

                    <VerticalStackLayout 
                        Spacing="5">
                        <Label 
                            Text="Category" />
                        <Picker 
                            x:Name="CategoryPicker" 
                            SelectedIndexChanged="OnCategoryChanged">
                            <Picker.Items>
                                <x:String>General Expense</x:String>
                                <x:String>Event Expense</x:String>
                            </Picker.Items>
                        </Picker>
                    </VerticalStackLayout>

                    <VerticalStackLayout 
                        x:Name="EventPickerStack"
                        Spacing="5" 
                        IsVisible="False">
                        <Label 
                            Text="Select Event" />
                        <Picker 
                            x:Name="EventPicker" />
                    </VerticalStackLayout>

                    <VerticalStackLayout 
                        Spacing="5">
                        <Label Text="Receipt" />
                        <HorizontalStackLayout
                            Spacing="10">
                            <Button x:Name="SelectReceiptButton" 
                                    Text="Select Receipt"
                                    BackgroundColor="#28a745"
                                    TextColor="White"
                                    Clicked="OnSelectReceiptClicked" />
                            <Label x:Name="ReceiptFileLabel"
                                   VerticalOptions="Center" />
                        </HorizontalStackLayout>
                    </VerticalStackLayout>

                    <HorizontalStackLayout Spacing="10" 
                                           HorizontalOptions="End">
                        <Button Text="Cancel"
                                Clicked="OnCancelClicked" 
                                BackgroundColor="Gray" />
                        <Button Text="Add Expense"
                                BackgroundColor="#28a745"
                                TextColor="White"
                                Clicked="OnAddExpenseClicked" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>