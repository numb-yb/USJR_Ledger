<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="USJRLedger.Views.Officer.AddIncomePage"
             Title="Add Income">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">
            <Label x:Name="SchoolYearLabel" 
                   FontSize="18" 
                   FontAttributes="Bold" />

            <Frame BorderColor="Gray" Padding="15">
                <VerticalStackLayout Spacing="15">

                    <Label Text="Income Details"
                           FontSize="20"
                           FontAttributes="Bold" />

                    <VerticalStackLayout Spacing="5">
                        <Label Text="Income Description" />
                        <Entry x:Name="DetailEntry" Placeholder="Enter income description" />
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="5">
                        <Label Text="Amount" />
                        <Entry x:Name="AmountEntry" Placeholder="Enter amount" Keyboard="Numeric" />
                    </VerticalStackLayout>

                    <VerticalStackLayout Spacing="5">
                        <Label Text="Category" />
                        <Picker x:Name="CategoryPicker" SelectedIndexChanged="OnCategoryChanged">
                            <Picker.Items>
                                <x:String>General Income</x:String>
                                <x:String>Event Income</x:String>
                            </Picker.Items>
                        </Picker>
                    </VerticalStackLayout>

                    <VerticalStackLayout x:Name="EventPickerStack"
                                         Spacing="5"
                                         IsVisible="False">
                        <Label Text="Select Event" />
                        <Picker x:Name="EventPicker" />
                    </VerticalStackLayout>

                    <!-- Receipt Section -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Receipt (optional)" />
                        <HorizontalStackLayout Spacing="10">
                            <Button x:Name="SelectReceiptButton"
                                    Text="Upload Receipt"
                                    BackgroundColor="#28a745"
                                    TextColor="White"
                                    Clicked="OnSelectReceiptClicked" />
                            <Label x:Name="ReceiptFileLabel" VerticalOptions="Center" />
                        </HorizontalStackLayout>

                        <!-- Thumbnail Preview -->
                        <Image x:Name="ReceiptPreview"
                               HeightRequest="150"
                               Aspect="AspectFit"
                               IsVisible="False" />
                    </VerticalStackLayout>

                    <HorizontalStackLayout Spacing="10" HorizontalOptions="End">
                        <Button Text="Cancel"
                                BackgroundColor="Gray"
                                Clicked="OnCancelClicked" />
                        <Button Text="Add Income"
                                BackgroundColor="#28a745"
                                TextColor="White"
                                Clicked="OnAddIncomeClicked" />
                    </HorizontalStackLayout>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
