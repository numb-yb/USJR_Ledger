<?xml version="1.0" encoding="utf-8"?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="USJRLedger.Views.Officer.OfficerDashboardPage"
             Title="Officer Dashboard"
             BackgroundColor="White">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Header -->
            <Frame Padding="20" BackgroundColor="Green" CornerRadius="0" HasShadow="False">
                <VerticalStackLayout Spacing="5">
                    <Label x:Name="WelcomeLabel"
                           Text="Welcome, Jak Menguez"
                           FontSize="20"
                           TextColor="White"
                           HorizontalOptions="Center" />

                    <Label x:Name="OrganizationLabel"
                           Text="Organization: ComEs (Engineering)"
                           FontSize="14"
                           TextColor="White"
                           HorizontalOptions="Center" />

                    <Label x:Name="PositionLabel"
                           Text="Position: President"
                           FontSize="13"
                           TextColor="#D1C4E9"
                           HorizontalOptions="Center" />
                </VerticalStackLayout>
            </Frame>

            <!-- Summary Cards -->
            <Grid RowSpacing="10" ColumnSpacing="10">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Current Balance -->
                <Frame Grid.Row="0" Grid.Column="0" CornerRadius="12" HasShadow="True" Padding="15">
                    <VerticalStackLayout>
                        <Label Text="Current Balance"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="Black" />
                        <Label x:Name="BalanceLabel"
                               Text="â‚± -490,000.00"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="Red" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Pending Expenses -->
                <Frame Grid.Row="0" Grid.Column="1" CornerRadius="12" HasShadow="True" Padding="15">
                    <VerticalStackLayout>
                        <Label Text="Pending Expenses"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="Black" />
                        <Label x:Name="PendingExpensesLabel"
                               Text="1"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="Orange" />
                    </VerticalStackLayout>
                </Frame>

                <!-- Pending Income -->
                <Frame Grid.Row="1" Grid.Column="0" CornerRadius="12" HasShadow="True" Padding="15">
                    <VerticalStackLayout>
                        <Label Text="Pending Income"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="Black" />
                        <Label x:Name="PendingIncomeLabel"
                               Text="0"
                               FontSize="20"
                               FontAttributes="Bold"
                               TextColor="#009688" />
                    </VerticalStackLayout>
                </Frame>

                <!-- School Year -->
                <Frame Grid.Row="1" Grid.Column="1" CornerRadius="12" HasShadow="True" Padding="15">
                    <VerticalStackLayout>
                        <Label Text="School Year Status"
                               FontSize="16"
                               FontAttributes="Bold"
                               TextColor="Black" />
                        <Label x:Name="SchoolYearLabel"
                               Text="Active: 1st Semester 2025-2026"
                               FontSize="14"
                               TextColor="Green"
                               FontAttributes="Bold" />
                    </VerticalStackLayout>
                </Frame>
            </Grid>

            <!-- Recent Transactions -->
            <Frame CornerRadius="12" HasShadow="True" Padding="15" Margin="0,10,0,0">
                <VerticalStackLayout>
                    <Label Text="Recent Transactions"
                           FontSize="18"
                           FontAttributes="Bold"
                           Margin="0,0,0,10" />
                    <CollectionView x:Name="TransactionsListView"
                                    EmptyView="No recent transactions found.">
                        <CollectionView.ItemTemplate>
                            <DataTemplate>
                                <Grid ColumnDefinitions="*,Auto,Auto" Padding="5">
                                    <VerticalStackLayout>
                                        <Label Text="{Binding Detail}"
                                               FontAttributes="Bold"
                                               FontSize="14" />
                                        <Label Text="{Binding DateString}"
                                               FontSize="12"
                                               TextColor="Gray" />
                                    </VerticalStackLayout>
                                    <Label Grid.Column="1"
                                           Text="{Binding AmountString}"
                                           FontSize="14"
                                           VerticalOptions="Center" />
                                    <Label Grid.Column="2"
                                           Text="{Binding StatusString}"
                                           FontSize="14"
                                           VerticalOptions="Center"
                                           Margin="10,0,0,0" />
                                </Grid>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>
                </VerticalStackLayout>
            </Frame>

            <!-- Actions -->
            <VerticalStackLayout Spacing="10">
                <Button Text="View Organization Profile"
                        Clicked="OnViewOrgProfileClicked"
                        BackgroundColor="#4CAF50"
                        TextColor="White"
                        CornerRadius="10"
                        FontAttributes="Bold" />

                <Button Text="Create Event"
                        Clicked="OnCreateEventClicked"
                        BackgroundColor="#4CAF50"
                        TextColor="White"
                        CornerRadius="10"
                        FontAttributes="Bold" />

                <Button Text="Add Expense"
                        Clicked="OnAddExpenseClicked"
                        BackgroundColor="#4CAF50"
                        TextColor="White"
                        CornerRadius="10"
                        FontAttributes="Bold" />

                <Button Text="Add Income"
                        Clicked="OnAddIncomeClicked"
                        BackgroundColor="#4CAF50"
                        TextColor="White"
                        CornerRadius="10"
                        FontAttributes="Bold" />

                <Button Text="Logout"
                        Clicked="OnLogoutClicked"
                        BackgroundColor="#B71C1C"
                        TextColor="White"
                        CornerRadius="10"
                        FontAttributes="Bold" />
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
