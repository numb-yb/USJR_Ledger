<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:converters="clr-namespace:USJRLedger.Converters"
             x:Class="USJRLedger.Views.Admin.ManageAdvisersPage"
             Title="Manage Advisers">

    <ContentPage.Resources>
        <ResourceDictionary>
            <converters:BoolToStatusConverter x:Key="BoolToStatusConverter" />
            <converters:BoolToActionConverter x:Key="BoolToActionConverter" />
        </ResourceDictionary>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Add Adviser Section -->
            <Frame BorderColor="Gray" Padding="15">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Add New Adviser" FontSize="20" FontAttributes="Bold" />

                    <!-- Full Name -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Full Name" />
                        <Entry x:Name="NameEntry" Placeholder="Enter adviser's full name" />
                    </VerticalStackLayout>

                    <!-- Username -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Employee ID (Username)" />
                        <Entry x:Name="UsernameEntry" Placeholder="Enter employee ID" />
                    </VerticalStackLayout>

                    <!-- Temporary Password -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Temporary Password" />
                        <Entry x:Name="PasswordEntry" Placeholder="Enter temporary password" IsPassword="True" />
                    </VerticalStackLayout>

                    <!-- Organization Picker -->
                    <VerticalStackLayout Spacing="5">
                        <Label Text="Organization" />
                        <Grid ColumnDefinitions="*,Auto">
                            <Picker x:Name="OrganizationPicker"
                                    Title="Select organization"
                                    ItemDisplayBinding="{Binding Name}"
                                    SelectedIndexChanged="OnOrganizationSelected" />

                            <Button x:Name="ClearOrganizationButton"
                                    Text="Clear"
                                    BackgroundColor="Transparent"
                                    TextColor="Black"
                                    FontAttributes="Bold"
                                    IsVisible="False"
                                    Clicked="OnClearOrganizationClicked"
                                    Grid.Column="1"
                                    VerticalOptions="Center" />
                        </Grid>
                    </VerticalStackLayout>

                    <Button Text="Add Adviser"
                            Clicked="OnAddAdviserClicked"
                            HorizontalOptions="End"
                            BackgroundColor="#6200EE"
                            TextColor="White"
                            CornerRadius="6" />
                </VerticalStackLayout>
            </Frame>

            <!-- Existing Advisers Section -->
            <Frame BorderColor="Gray" Padding="15">
                <VerticalStackLayout Spacing="15">
                    <Label Text="Existing Advisers" FontSize="20" FontAttributes="Bold" />

                    <ListView x:Name="AdvisersListView" HasUnevenRows="True" SeparatorVisibility="None">
                        <ListView.ItemTemplate>
                            <DataTemplate>
                                <ViewCell>
                                    <Frame Margin="5" Padding="10" BorderColor="Gray" HasShadow="False">
                                        <Grid RowDefinitions="Auto,Auto,Auto,Auto">
                                            <!-- Adviser Info -->
                                            <Label Grid.Row="0"
                                                   Text="{Binding Name}"
                                                   FontAttributes="Bold"
                                                   FontSize="16" />

                                            <Label Grid.Row="1"
                                                   Text="{Binding Username}"
                                                   FontSize="14"
                                                   TextColor="Gray" />

                                            <StackLayout Grid.Row="2"
                                                         Orientation="Horizontal"
                                                         Spacing="5">
                                                <Label Text="Status:" FontAttributes="Bold" />
                                                <Label Text="{Binding IsActive, Converter={StaticResource BoolToStatusConverter}}" />
                                            </StackLayout>

                                            <!-- Responsive Buttons -->
                                            <StackLayout Grid.Row="3"
                                                         Orientation="Horizontal"
                                                         Spacing="10"
                                                         HorizontalOptions="End">
                                                <StackLayout.Triggers>
                                                    <DataTrigger TargetType="StackLayout"
                                                                 Binding="{Binding Source={x:Reference AdvisersListView}, Path=Width}"
                                                                 Value="400">
                                                        <Setter Property="Orientation" Value="Vertical" />
                                                        <Setter Property="HorizontalOptions" Value="Fill" />
                                                    </DataTrigger>
                                                </StackLayout.Triggers>

                                                <!-- Toggle Button -->
                                                <Button Text="{Binding IsActive, Converter={StaticResource BoolToActionConverter}}"
                                                        BackgroundColor="#2196F3"
                                                        TextColor="White"
                                                        CornerRadius="6"
                                                        HeightRequest="35"
                                                        BindingContext="{Binding .}"
                                                        Clicked="OnToggleStatusClicked" />

                                                <!-- Delete Button -->
                                                <Button Text="Delete"
                                                        BackgroundColor="#D32F2F"
                                                        TextColor="White"
                                                        CornerRadius="6"
                                                        HeightRequest="35"
                                                        BindingContext="{Binding .}"
                                                        Clicked="OnDeleteAdviserClicked" />
                                            </StackLayout>
                                        </Grid>
                                    </Frame>
                                </ViewCell>
                            </DataTemplate>
                        </ListView.ItemTemplate>
                    </ListView>
                </VerticalStackLayout>
            </Frame>
        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
