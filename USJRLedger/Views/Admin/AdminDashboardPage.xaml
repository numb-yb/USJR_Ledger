<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="USJRLedger.Views.Admin.AdminDashboardPage"
    Title="Admin Dashboard"
    BackgroundColor="#f5f5f7">

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Header -->
            <Label Text="Welcome, System Administrator"
                   x:Name="WelcomeLabel"
                   FontSize="22"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"
                   TextColor="Black" />

            <!-- System Overview -->
            <Label Text="System Overview"
                   FontSize="16"
                   TextColor="Gray"
                   HorizontalOptions="Center" />

            <!-- Quick Stats Card -->
            <Frame BorderColor="Gray"
                   CornerRadius="10"
                   HasShadow="True"
                   Padding="10"
                   BackgroundColor="#fafafa">
                <VerticalStackLayout>
                    <Label Text="Quick Stats"
                           FontSize="18"
                           FontAttributes="Bold"
                           HorizontalOptions="Center" />
                    <Label x:Name="TotalOrganizationsLabel"
                           Text="Total Organizations: 0"
                           FontSize="14" />
                    <Label x:Name="ActiveOrganizationsLabel"
                           Text="Active Organizations: 0"
                           FontSize="14" />
                    <Label x:Name="TotalAdvisersLabel"
                           Text="Total Advisers: 0"
                           FontSize="14" />
                    <Label x:Name="TotalTransactionsLabel"
                           Text="Total Transactions: 0"
                           FontSize="14" />
                    <Label x:Name="TotalEventsLabel"
                           Text="Total Events: 0"
                           FontSize="14" />
                </VerticalStackLayout>
            </Frame>

            <!-- Buttons -->
            <VerticalStackLayout Spacing="10">
                <Button Text="Create Organization"
                        Clicked="OnCreateOrgClicked"
                        BackgroundColor="#28a745"
                        TextColor="White"
                        CornerRadius="10"
                        HeightRequest="48"
                        FontSize="16" />

                <Button Text="View Organizations"
                        Clicked="OnViewOrgsClicked"
                        BackgroundColor="#28a745"
                        TextColor="White"
                        CornerRadius="10"
                        HeightRequest="48"
                        FontSize="16" />

                <Button Text="Manage Advisers"
                        Clicked="OnManageAdvisersClicked"
                        BackgroundColor="#28a745"
                        TextColor="White"
                        CornerRadius="10"
                        HeightRequest="48"
                        FontSize="16" />

                <Button Text="Reset Entire System"
                        Clicked="OnCompleteSystemResetClicked"
                        BackgroundColor="#dc3545"
                        TextColor="White"
                        CornerRadius="10"
                        HeightRequest="48"
                        FontSize="16" />

                <Button Text="Logout"
                        Clicked="OnLogoutClicked"
                        BackgroundColor="#8B0000"
                        TextColor="White"
                        CornerRadius="10"
                        HeightRequest="50"
                        FontSize="16"
                        Margin="0,10,0,0" />
            </VerticalStackLayout>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>
