<?xml version="1.0" encoding="utf-8" ?>
<ContentPage 
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="USJRLedger.Views.Admin.AdminDashboardPage"
    Title="Admin Dashboard">

    <ScrollView>
        <Grid Padding="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Label 
                Text="Welcome, System Administrator"
                FontSize="24"
                FontAttributes="Bold"
                HorizontalOptions="Center"
                Margin="0,12,0,12"/>

            <StackLayout x:Name="MainLayout"
                         Grid.Row="1"
                         Spacing="20"
                         HorizontalOptions="Center"
                         WidthRequest="{OnIdiom Phone=Auto, Tablet=600}">

                <!-- Action Buttons -->
                <StackLayout x:Name="ActionButtons" 
                             Orientation="Vertical" 
                             Spacing="12">
                    <Button Text="Create Organization" 
                            BackgroundColor="#5C4DFF" 
                            TextColor="White" 
                            CornerRadius="8" 
                            HeightRequest="48" 
                            FontSize="16" 
                            HorizontalOptions="FillAndExpand"/>
                    <Button Text="View Organizations" 
                            BackgroundColor="#5C4DFF" 
                            TextColor="White"
                            CornerRadius="8" 
                            HeightRequest="48" 
                            FontSize="16" 
                            HorizontalOptions="FillAndExpand"/>
                    <Button Text="Manage Advisers"
                            BackgroundColor="#5C4DFF" 
                            TextColor="White" 
                            CornerRadius="8"
                            HeightRequest="48" 
                            FontSize="16" 
                            HorizontalOptions="FillAndExpand"/>
                </StackLayout>

                <!-- System Actions -->
                <HorizontalStackLayout Spacing="16" 
                                       HorizontalOptions="Center" 
                                       Margin="0,16,0,0">
                    <Button Text="RESET ENTIRE SYSTEM" 
                            BackgroundColor="Red" 
                            TextColor="White" 
                            CornerRadius="8"
                            HeightRequest="48" 
                            FontSize="16" />
                    <Button Text="Logout" 
                            BackgroundColor="#B71C1C" 
                            TextColor="White" 
                            CornerRadius="8" 
                            HeightRequest="48" 
                            FontSize="16" />
                </HorizontalStackLayout>

                <!-- Quick Stats -->
                <Frame Margin="0,24,0,0" 
                       Padding="16"
                       BorderColor="Gray" 
                       CornerRadius="12" 
                       HasShadow="True" 
                       HorizontalOptions="FillAndExpand">
                    <VerticalStackLayout>
                        <Label Text="Quick Stats" 
                               FontSize="18" 
                               FontAttributes="Bold" 
                               Margin="0,0,0,8" />
                        <Label Text="Total Organizations: 0" 
                               FontSize="14" 
                               TextColor="Gray" />
                        <Label Text="Active Organizations: 0"
                               FontSize="14" 
                               TextColor="Gray" />
                        <Label Text="Total Advisers: 0" 
                               FontSize="14" 
                               TextColor="Gray" />
                        <Label Text="Total Transactions: 0" 
                               FontSize="14" 
                               TextColor="Gray" />
                        <Label Text="Total Events: 0" 
                               FontSize="14" 
                               TextColor="Gray" />
                    </VerticalStackLayout>
                </Frame>
            </StackLayout>
        </Grid>
    </ScrollView>
</ContentPage>
